<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.alexandrelara.tournamaker.SelectTypeActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:gravity="top|center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Tournament Type"
            android:id="@+id/tournamentTypeTextView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select a tournament type"
            android:id="@+id/tournamentTypeDescriptionTextView" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Round Robin"
            android:id="@+id/roundRobinBtn"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:onClick="tournamentTypeDialog" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Knockout"
            android:id="@+id/knockoutBtn"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:onClick="tournamentTypeDialog" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Round Robin-Knockout"
            android:id="@+id/roundRobinKnockoutBtn"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:onClick="tournamentTypeDialog" />
    </LinearLayout>

</RelativeLayout>
